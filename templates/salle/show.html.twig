{% extends 'base.html.twig' %}

{% block title %}{{ salle.ville }}{% endblock %}

{% block body %}


<div class="container">
    <center><h1>Salle de {{ salle.ville }}</h1></center>
    <hr>
    <center><h3>Thème : {{ salle.theme.themes }}</h3></center>
    <hr>
    <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="{{ asset('Images/lsrgame3.jpg') }}" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <h5>First slide label</h5>
                    <p>Some representative placeholder content for the first slide.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="{{ asset('Images/lsrgame2.jpg') }}" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Second slide label</h5>
                    <p>Some representative placeholder content for the second slide.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="{{ asset('Images/lsrgame1.jpg') }}" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Third slide label</h5>
                    <p>Some representative placeholder content for the third slide.</p>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev"></button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next"></button>
        <br>
        <center><h3>Nos obstacles :</h3></center>
        <hr>
        <br>

        <div class="d-flex flex-wrap" style="justify-content: space-around;align-items: flex-start;">
        {% for obstacle in obstacles %}
                <div class="card" style="width: 18rem;">
                    <img src="{{ obstacle.photo }}" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">{{ obstacle.nom }}</h5>
                        <p class="card-text">Difficulté : {{ obstacle.typeObstacle }}</p>
                    </div>
                </div>
            {% endfor %}
        </div>

        <br>
        <center><h3>Commentaires des utilisateurs :</h3></center>
        <hr>
        <br>

        <div class="d-flex flex-wrap" style="justify-content: space-around;align-items: flex-start;">
        {% for avi in avis %}
            <div class="card shadow-1 hoverable-1 rounded-3">
                <div class="card-header">{{ avi.client.nom }} {{ avi.client.prenom }}</div>
                <div class="card-content">
                    <p>
                        {{ avi.commentaire }}
                    </p>
                </div>
            </div>
        {% endfor %}
        </div>
        <br><br>
    </div>
</div>
{% endblock %}